@model IEnumerable<WebApplication6.Models.Haircut>

@{
    ViewData["Title"] = "list";
}






@if (User.IsInRole("admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

 @foreach (var item in Model) {
<div class="card" style="width: 100% ; height : auto ; display: inline-block ; " >
    
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />

<div class="well text-center">
  <div class="row">
    <div class="col-md-6">
      <a href="#"><img src="~/images/@item.ImageUrl" alt="Card image cap" class="img-fluid" style="max-width:100%; height:100%;object-fit: contain;"></a>
    </div>
    <div class="col-md-6">
      <a href="#"><img  src="~/images/@item.BackImageUrl" alt="Card image cap" class="img-fluid" style="width:100%; height:100%;object-fit: contain;"></a>
    </div>
  </div>
</div>
    
   
  
  <div class="card-body">
      <label>Price @item.Price</label>
    <h5 class="card-title">@item.Name</h5>
    <p class="card-text" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 500ch;">@item.Info</p>
    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
  </div>
</div>
}



